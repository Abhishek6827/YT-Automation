// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Used for pooling (Vercel/Neon)
  directUrl = env("POSTGRES_URL_NON_POOLING") // Used for migrations
}

model Video {
  id          String    @id @default(uuid())
  driveId     String    @unique
  fileName    String
  title       String?
  description String?
  tags        String?
  status      String    @default("PENDING") // PENDING, PROCESSING, UPLOADED, FAILED
  youtubeId   String?
  uploadedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Settings {
  id              Int      @id @default(1)
  driveFolderLink String?
  uploadHour      Int      @default(10) // What hour to upload (0-23)
  videosPerDay    Int      @default(1)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
